{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "clean:both": "rimraf ./dist/babel && rimraf ./dist/webpack",
    "clean:babel": "rimraf ./dist/server",
    "clean:types": "rimraf ./dist/types",
    "clean:webpack": "rimraf ./webpack && rimraf ./dist/.cipher_cache && rimraf ../client/node_modules/.cache",
    "type-check": "cross-env NODE_ENV=production tsc --watch",
    "babel-server": "cross-env NODE_ENV=productions babel ../../packages --out-dir ./dist/server/babel --extensions '.js,.ts,.tsx,.d.ts,.css' --copy-files",
    "build:type-check": "type-check && cross-env NODE_ENV=development  webpack ./webpack.config.js --watch",
    "build": "cross-env NODE_ENV=development npx webpack  --config  ./webpack.config.js --progress --watch",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/server.tsx",
    "starts": "node ./dist/types/packages/server/src/server.js",
    "copy-client-dist": "xcopy /E /Y packages/client/src/dist packages/server/dist/types/packages/client/dist",
    "tsnode-dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only ./src/server.tsx",
    "start": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only ./src/server.tsx",
    "watch": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/server.tsx --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@emotion/server": "^11.11.0",
    "@types/lodash": "^4.17.16",
    "@types/mark.js": "^8.11.12",
    "babel-plugin-module-resolver": "^5.0.2",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.3.0",
    "install": "^0.13.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongoose": "^8.13.1",
    "multer": "^2.0.0",
    "npm": "^11.2.0",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-instagram": "^1.0.0",
    "passport-local": "^1.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.3",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.1.0",
    "webpack-node-externals": "^3.0.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@babel/runtime": "^7.27.3",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-facebook": "^3.0.3",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-instagram": "^1.0.5",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "compression-webpack-plugin": "^11.1.0",
    "core-js": "^3.42.0",
    "cpx": "^1.5.0",
    "cpy-cli": "^5.0.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
