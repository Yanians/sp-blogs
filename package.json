{
  "name": "sp-blogs",
  "version": "1.0.0",
  "private": true,
  "main": "server.js",
  "homepage": "http://localhost:5000",
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "scripts": {
    "build-typescript-server": "tsc -p packages/server/tsconfig.json",
    "clean:both": "npm run clean:babel -w packages/server && npm run clean:webpack -w packages/server",
    "clean:babel": "npm run clean:babel -w packages/server",
    "clean:server": "npm run clean:webpack -w packages/server",
    "babel-type:client": "concurrently \"npm run type-check -w packages/client \" \" npm run babel-client -w packages/client\"",
    "babel-type:server": "concurrently \"npm run type-check -w packages/server \" \" npm run babel-server -w packages/server\"",
    "build-client:dev": "npm run build:dev -w packages/client",
    "build-client:prod": "npm run build:prod -w packages/client",
    "build-client": "webpack --config packages/client/webpack.build.js",
    "build-server": "tsc -p packages/server/tsconfig.json",
    "build-client:serve": "npm run serve -w packages/client",
    "build-server:webpack": "npm run build -w packages/server",
    "build-server:typescript": "tsc -w packages/server/tsconfig.json",
    "tsnode": "npm run tsnode-dev -w packages/server",
    "build-dev": "npm run build-client:prod",
    "watch:test": "chokidar \"packages/client/public/**/*\" -c \"echo CHANGED FILES\"",
    "copy:client:mdfiles-x": "echo Copying mdfiles && xcopy packages\\client\\src\\blog\\mdfiles dist\\server\\client\\src\\blog\\mdfiles /E /Y /I",
    "copy:client:public-x": " echo Copying public files && xcopy packages\\client\\public dist\\server\\server\\public /E /Y /I",
    "copy:client:mdfiles": "cpy \"packages/client/src/blog/mdfiles/**/*\" dist/server/client/src/blog/mdfiles --parents",
    "copy:client:public": "cpy \"packages/client/public/**/*\" dist/server/server/public --parents",
    "copy:client:dist:example1": "copy /Y packages/client/public\\*.* dist/server/server\\",
    "copy:client:dist:example2": "cpy \"packages/client/public/**/*\" dist/server/server/public",
    "build-copy": "npm run build-client:dev && npm run type-check -w packages/server && npm run copy:client:dist",
    "watch:client": "webpack --config packages/client/webpack.build.js --watch",
    "watch:server-check": "tsc-watch --project packages/server/tsconfig.json --onSuccess \"node ./dist/server/server/src/server.js\"",
    "watch:server": "tsc-watch --project packages/server/tsconfig.json --onSuccess \"node ./dist/server/server/src/server.js\"",
    "watch:public": "chokidar \"packages/client/public/**/*\" -c \"npm run copy:client:public\"",
    "watch:copied": "chokidar \"packages/client/src/**/*\" -c \"npm run copy:client:mdfiles && npm run copy:client:public\"",
    "watch:copy2": "concurrently -n MDFILES,PUBLIC -c magenta,blue \"chokidar \\\"packages/client/src/blog/mdfiles/**/*\\\" -c \\\"npm run copy:client:mdfiles\\\"\" \"chokidar \\\"packages/client/public/**/*\\\" -c \\\"npm run copy:client:public\\\"\"",
    "watch:copy3": "concurrently -n MDFILES,PUBLIC -c magenta,blue \"chokidar 'packages/client/src/blog/mdfiles/**/*' -c 'npm run copy:client:mdfiles'\" \"chokidar 'packages/client/public/**/*' -c 'npm run copy:client:public'\"",
    "watch:copy": "concurrently -n MDFILES,PUBLIC -c magenta,blue \"chokidar \\\"packages/client/src/blog/mdfiles/**/*\\\" -c \\\"npm run copy:client:mdfiles\\\"\" \"chokidar \\\"packages/client/public/**/*\\\" -c \\\"npm run copy:client:public\\\"\"",
    "dev": "concurrently -k -n CLIENT,SERVER,COPY,MDFILES -c green,cyan,yellow,white \"npm:watch:client\" \"npm:watch:server\" \"npm:watch:copy\"",
    "build": "npm run build-client && npm run build-server && npm run copy:client:public && npm run copy:client:mdfiles",
    "start": "node dist/server/server/src/server.js",
    "watch": "npm run watch -w package/server && npm run watch -w packages/client",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
