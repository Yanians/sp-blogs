{
  "version": 2,
  "builds": [
    {
      "src": "dist/server/server/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",      
      "dest": "dist/server/server/src/server.js"
    },
    {
      "src": "/static/(.*)",     
      "dest": "public/static/$1"
    },
    {
      "src": "/(.*)",            
      "dest": "build/$1"
    }
  ]
}
